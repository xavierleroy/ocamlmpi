build: [
  [make "all" "opt"
    "MPIINCDIR=%{conf-mpi:includedir}%"
    "MPILIBDIR=%{conf-mpi:libdir}%"
    "MPICC=%{conf-mpi:binpath}%mpicc"
    "MPIRUN=%{conf-mpi:binpath}%mpirun"
  ]
]
install: [[make "install"]]
remove: [[make "uninstall"]]
